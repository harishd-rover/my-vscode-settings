{
  "code-runner.runInTerminal": true,
  "editor.mouseWheelZoom": true,
  "editor.fontSize": 20,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.saveFileBeforeRun": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "code-runner.executorMap": {
    "powershell": "powershell -ExecutionPolicy ByPass -File",

    "csharp": "cd $dir && dotnet run",
    "typescript": "tsc $fileName && node $fileNameWithoutExt.js"
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "editor.tabSize": 2,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorTheme": "codeSTACKr Theme",
  "glassit.alpha": 240,
  "editor.fontFamily": "Hack NF",
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": true,
  "workbench.preferredDarkColorTheme": "codeSTACKr Theme",
  "workbench.preferredHighContrastColorTheme": "codeSTACKr Theme",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairsHorizontal": true,
  "workbench.productIconTheme": "fluent-icons",
  "window.title": "${dirty}${activeFolderShort} / ${activeEditorShort}${separator}${rootName}",
  "security.workspace.trust.untrustedFiles": "open",
  "editor.codeLensFontFamily": "Hack NF",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "breadcrumbs.enabled": false,
  "terminal.integrated.cursorWidth": 2,
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info", "hint"],
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.colors": [
    "rgba(98, 186, 39,0.9)",
    "rgba(254, 233, 7,0.9)",
    "rgba(255, 30, 255,0.9)",
    "rgba(0, 210, 234,0.9)",
    "rgba(255,127,000,0.9)",
    "rgba(255,000,000,0.9)",
    "rgba(0, 108, 220,0.9)",
    "rgba(242, 73, 130,0.9)"  
  ],
  "indentRainbow.errorColor": "rgba(128,32,32,0.9)",
  "indentRainbow.tabmixColor": "rgba(128,32,96,0.9)",
  "better-comments.highlightPlainText": true,
  "editor.suggest.preview": true,
  "indenticator.color.dark": "#FFF",
  "indenticator.inner.color.dark": "#FFF",
  "editor.tabCompletion": "on",
  "indenticator.width": 1,
  "indenticator.inner.showHover": false,
  "editor.renderLineHighlight": "all",
  "prettier.singleQuote": true,
}
