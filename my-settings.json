{
  // Workbench settings***************************************
  "workbench.colorTheme": "Atom One Darker",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.preferredDarkColorTheme": "Atom One Darker",
  "workbench.preferredHighContrastColorTheme": "Atom One Darker",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editor.enablePreview": false,
  "workbench.layoutControl.enabled": false,
  "workbench.colorCustomizations": {
    "[Atom One Darker]": {
      "editor.background": "#000",
      "editorGroupHeader.tabsBackground": "#000",
      "tab.activeBorder": "#ff4400",
      "tab.activeBackground": "#000",
      "tab.inactiveBackground": "#000",
      "menubar.selectionForeground": "#FFF",
      "menu.selectionBackground": "#FF4500",
      "menu.background": "#333333EE",
      "toolbar.hoverBackground": "#FF4500",
      "titleBar.activeBackground": "#000",
      "statusBar.background": "#000000",
      "statusBar.border": "#222",
      "statusBarItem.hoverBackground": "#FF4500",
      "sideBar.background": "#000",
      "sideBar.border": "#222",
      "sideBarSectionHeader.background": "#000",
      "focusBorder": "#ff4400d5",
      "list.hoverBackground": "#FF450066",
      "list.activeSelectionBackground": "#FF4500BB",
      "activityBar.background": "#000",
      "activityBar.activeBackground": "#000",
      "activityBar.activeBorder": "#FF4500",
      "activityBar.foreground": "#FF4500",
      "activityBar.inactiveForeground": "#FFFFFF70",
      "panel.background": "#000",
      "panel.border": "#222",
      "panelTitle.activeBorder": "#FF0000",
      "panelTitle.activeForeground": "#FF0000",
      "panelTitle.inactiveForeground": "#FFFFFF70",
      "badge.background": "#ff4500",
      "profileBadge.background": "#ff4500",
      "activityBarBadge.background": "#ff4500"
    }
  },
  "security.workspace.trust.untrustedFiles": "open",
  "breadcrumbs.enabled": false,
  "workbench.editor.dragToOpenWindow": true,

  //Window*****************************************************
  "window.title": "${activeEditorShort}${separator}${rootName}",
  "window.commandCenter": false,
  "window.titleBarStyle": "custom",

  // Terminal***************************************************
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  // Git*******************************************************
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  // Editor****************************************************
  "editor.mouseWheelZoom": true,
  "editor.fontSize": 20,
  "editor.tabSize": 2,
  "editor.stickyScroll.enabled": false,
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.scrollbar.horizontalScrollbarSize": 8,
  "editor.overviewRulerBorder": false,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.fontFamily": "Rec Mono Casual", // "Rec Mono Casual" or "Cascadia Code" or "Rec Mono Semicasual" or "Fira Code"
  "editor.fontLigatures": true,
  "editor.cursorWidth": 3,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.suggest.preview": true,
  "editor.tabCompletion": "on",
  "editor.formatOnSave": false,
  // "editor.rulers": [80, 120],
  // "editor.codeActionsOnSave": {   // Not recommended
  //   "source.fixAll": "always",
  //   "source.organizeImports": "always"
  // },
  "editor.linkedEditing": true,
  "editor.tokenColorCustomizations": {
    // add rules for your code colors*********************************
    // Recommended to use base scope.
    "textMateRules": [
      {
        "scope": ["variable.language.this.ts", "variable.language.this.js"],
        "settings": {
          "foreground": "#d9ff00"
        }
      },
      {
        "scope": ["meta.object-literal.key.ts", "meta.object-literal.key.js"],
        "settings": {
          "foreground": "#ff00b3"
        }
      },
      {
        "scope":"string.quoted",
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": ["storage.type.function.ts", "storage.type.function.js"],
        "settings": {
          "foreground": "#fcf12e"
        }
      },
      {
        "scope": "comment",
        "settings": {
          "foreground": "#91919191"
        }
      },
    ]
  },

  //Explorer*******************************************************
  "explorer.compactFolders": false,
  // "explorer.fileNesting.enabled": true,
  // "explorer.fileNesting.patterns": {
  //   "*.ts": "${capture}.js",
  //   "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
  //   "*.jsx": "${capture}.js",
  //   "*.tsx": "${capture}.ts",
  //   "tsconfig.json": "tsconfig.*.json",
  //   "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml"
  // },

  //Code Runner****************************************************
  "code-runner.runInTerminal": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.executorMap": {
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "csharp": "cd $dir && dotnet run",
    "typescript": "tsc $fileName && node $fileNameWithoutExt.js",
    "javascript": "cls && cd $dir && node $fileName"
  },
  //Error Lens*****************************************************
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning",
    "info"
    // "hint"
  ],
  //Indent Rainbow***********************************************
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.colors": [
    "rgba(98, 186, 39,0.9)",
    "rgba(254, 233, 7,0.9)",
    "rgba(255, 30, 255,0.9)",
    "rgba(0, 210, 234,0.9)",
    "rgba(255,127,000,0.9)",
    "rgba(255,000,000,0.9)",
    "rgba(0, 108, 220,0.9)",
    "rgba(242, 73, 130,0.9)"
  ],
  "indentRainbow.errorColor": "rgba(128,32,32,0.9)",
  "indentRainbow.tabmixColor": "rgba(128,32,96,0.9)",
  //Indenticator******************************************
  "indenticator.color.dark": "#FFF",
  "indenticator.inner.color.dark": "#FFF",
  "indenticator.width": 1,
  "indenticator.inner.showHover": false,
  // Path Intelligence************************************
  "path-intellisense.autoSlashAfterDirectory": true,
  // Better Comments**************************************
  "better-comments.highlightPlainText": true,
  "better-comments.tags": [
    {
      //! Red Alert
      "tag": "!",
      "color": "#FF1700",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      //? Warning - yellow
      "tag": "?",
      "color": "#FFE400",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      //* Success - green
      "tag": "*",
      "color": "#06FF00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      // Todo - blue
      "tag": "todo",
      "color": "#F6F6F6",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#1363DF",
      "bold": true,
      "italic": false
    },
    {
      ////strikeOut - grey
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      //## description
      "tag": "##",
      "color": "#00EAD3",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      //# Title
      "tag": "#",
      "color": "#FF449F",
      "strikethrough": false,
      "underline": true,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    }
  ],
  //Prettier / Formatters **************************************
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "diffEditor.ignoreTrimWhitespace": true,
  "gitlens.views.stashes.files.layout": "list",
  "gitlens.views.scm.grouped.views": {
    "commits": false,
    "branches": true,
    "remotes": true,
    "stashes": false,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "repositories": false,
    "searchAndCompare": true,
    "launchpad": false
  },
  "hexeditor.columnWidth": 20,
  "hexeditor.showDecodedText": true,
  "hexeditor.defaultEndianness": "big",
  "hexeditor.inspectorType": "hover",
  "git.enableSmartCommit": true,
  "debug.javascript.automaticallyTunnelRemoteServer": false,
  "debug.allowBreakpointsEverywhere": true,
  "debug.showBreakpointsInOverviewRuler": true,
  "security.allowedUNCHosts": [
    "wsl.localhost"
  ],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "tabnine.experimentalAutoImports": true,
  // Inlay Hints Settings *********************************************
  // "javascript.inlayHints.enumMemberValues.enabled": true,
  // "javascript.inlayHints.parameterNames.enabled": "all",
  // "typescript.inlayHints.enumMemberValues.enabled": true,
  // "typescript.inlayHints.parameterNames.enabled": "all",
