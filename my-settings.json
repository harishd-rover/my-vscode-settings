{
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.preferredDarkColorTheme": "codeSTACKr Theme",
  "workbench.preferredHighContrastColorTheme": "codeSTACKr Theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.editor.enablePreview": false,
  "window.title": "${dirty}${activeFolderShort} / ${activeEditorShort}${separator}${rootName}",
  "workbench.colorTheme": "codeSTACKr Theme",
  "workbench.colorCustomizations": {
  "[codeSTACKr Theme]": {
    "editor.background": "#000",
    "sideBar.background": "#000",
    "sideBarSectionHeader.background": "#000",
    "sideBar.border": "#222",
    "activityBar.background": "#000",
    "editorGroupHeader.tabsBackground": "#000",
    "tab.activeBackground": "#000",
    "tab.inactiveBackground": "#000",
    "titleBar.activeBackground": "#000",
    "statusBar.background": "#000",
    "panel.background": "#000",
    "panel.border": "#222",
    "activityBar.activeBackground": "#000",
  }
  },
  "security.workspace.trust.untrustedFiles": "open",
  "breadcrumbs.enabled": false,
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 2,
  "git.autofetch": true,
  "glassit.alpha": 240,
  "editor.mouseWheelZoom": true,
  "editor.fontSize": 20,
  "editor.tabSize": 2,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.fontFamily": "Rec Mono Casual", // "Rec Mono Casual" or "Cascadia Code" or "Rec Mono Semicasual" or "Fira Code"
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.suggest.preview": true,
  "editor.tabCompletion": "on",
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.organizeImports": true
  },
  "editor.linkedEditing": true,
  "code-runner.runInTerminal": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.saveFileBeforeRun": true,
  "code-runner.executorMap": {
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "csharp": "cd $dir && dotnet run",
    "typescript": "tsc $fileName && node $fileNameWithoutExt.js"
  },
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning",
    "info"
  ],
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.colors": [
    "rgba(98, 186, 39,0.9)",
    "rgba(254, 233, 7,0.9)",
    "rgba(255, 30, 255,0.9)",
    "rgba(0, 210, 234,0.9)",
    "rgba(255,127,000,0.9)",
    "rgba(255,000,000,0.9)",
    "rgba(0, 108, 220,0.9)",
    "rgba(242, 73, 130,0.9)"
  ],
  "indentRainbow.errorColor": "rgba(128,32,32,0.9)",
  "indentRainbow.tabmixColor": "rgba(128,32,96,0.9)",
  "indenticator.color.dark": "#FFF",
  "indenticator.inner.color.dark": "#FFF",
  "indenticator.width": 1,
  "indenticator.inner.showHover": false,
  "path-intellisense.autoSlashAfterDirectory": true,
  "better-comments.highlightPlainText": true,
  "better-comments.tags": [
    {
      //! Red Alert
      "tag": "!",
      "color": "#FF1700",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      //? Warning - yellow
      "tag": "?",
      "color": "#FFE400",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      //* Success - green
      "tag": "*",
      "color": "#06FF00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      // Todo - blue
      "tag": "todo",
      "color": "#F6F6F6",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "#1363DF",
      "bold": true,
      "italic": false
    },
    {
      ////strikeOut - grey
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": true
    },
    {
      //## description
      "tag": "##",
      "color": "#00EAD3",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      //# Title
      "tag": "#",
      "color": "#FF449F",
      "strikethrough": false,
      "underline": true,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    }
  ],
  "prettier.singleQuote": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
}
